<Window x:Class="CryptoWidget.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoWidget"
        mc:Ignorable="d"
        Title="SubWindow" Height="175" Width="150"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Border CornerRadius="5" BorderThickness="20" BorderBrush="#161616">
        <Grid Background="#161616 ">
            <Border  CornerRadius="15,15,0,0" BorderThickness="20"  Margin="-20,-20,-20,125" RenderTransformOrigin="0.5,1.467">
                <Rectangle x:Name="invisibleGrabBar"  HorizontalAlignment="Left" Height="30"  VerticalAlignment="Top" Width="150" MouseDown="titleBar_MouseDown" Fill="Black" Opacity="0.001" Margin="-20,-20,-20,-10"/>
            </Border>
        </Grid>
    </Border>
</Window>
